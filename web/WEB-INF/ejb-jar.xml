<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        version="3.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/ejb-jar_3_2.xsd">
    
    <enterprise-beans>
    <session>
        <ejb-name>OrderEmailNotifier</ejb-name>
        <env-entry>
            <description>Este ejemplo usa @Resource()</description>
            <env-entry-name>ejb.OrderEmailNotifier/host</env-entry-name>
            <env-entry-type>java.lang.String</env-entry-type>
            <env-entry-value>smtp.gmail.com</env-entry-value>
        </env-entry>
        <env-entry>
            <description>Este ejemplo usa @Resource()</description>
            <env-entry-name>ejb.OrderEmailNotifier/port</env-entry-name>
            <env-entry-type>java.lang.String</env-entry-type>
            <env-entry-value>587</env-entry-value>
        </env-entry>
        <env-entry>
            <description>Este ejemplo usa @Resource()</description>
            <env-entry-name>ejb.OrderEmailNotifier/mail</env-entry-name>
            <env-entry-type>java.lang.String</env-entry-type>
            <env-entry-value></env-entry-value>
        </env-entry>
        <env-entry>
            <description>Este ejemplo usa @Resource()</description>
            <env-entry-name>ejb.OrderEmailNotifier/pass</env-entry-name>
            <env-entry-type>java.lang.String</env-entry-type>
            <env-entry-value></env-entry-value>
        </env-entry>
    </session>
</enterprise-beans>
</ejb-jar>
